@{
    ViewData["Title"] = "Login";
    @model FinanceTracker.Models.User
}
<div class="h-screen flex text-neutral-900 justify-center items-center bg-black font-sans">
    <form asp-controller="Auth"
          asp-action="LoginUser"
          method="post"
          class="bg-white p-8 rounded-md shadow-lg w-full max-w-md">
        <h2 class="text-2xl font-medium text-black mb-6 text-center">
            Sign In
        </h2>

        @Html.TextBoxFor(m => m.username, new
            {
                @class = "w-full mb-4 p-3 border-2 border-neutral-900 bg-gray-100 text-neutral-900 rounded focus:border-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500",
                placeholder = "Username"
            })

        @Html.PasswordFor(m => m.password, new
            {
                @class = "w-full mb-4 p-3 border-2 border-neutral-900 bg-gray-100 text-neutral-900 rounded focus:border-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500",
                placeholder = "Password"
            })

        <button type="submit"
                class="w-full py-3 border-2 border-black bg-black text-white rounded font-semibold hover:bg-white hover:text-black transition cursor-pointer">
            Log In
        </button>
    </form>
</div>
