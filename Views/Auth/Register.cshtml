@model FinanceTracker.Models.User
@{
	ViewData["Title"] = "Register";
}
<div class="text-center">
	@if (!ViewData.ModelState.IsValid)
	{
		<div class="text-red-500 font-semibold mb-4">
			@foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
			{
				<div>@error.ErrorMessage</div>
			}
		</div>
	}
	<form asp-controller="Auth" asp-action="RegisterUser" method="post">
		<div class="flex flex-col items-center w-50%">
			@Html.TextBoxFor(m => m.username, new { @class = "border-2 border-pink-900 p-2 min-w-[10%]", placeholder = "Username" })
			@Html.TextBoxFor(m => m.name, new { @class = "border-2 border-pink-900 p-2 min-w-[10%]", placeholder = "Name" })
			@Html.PasswordFor(m => m.password, new { @class = "border-2 border-pink-900 p-2 min-w-[10%]", placeholder = "Secret Password" })
			<input class="border-2 border-pink-900 p-2 min-w-[10%]" type="submit"  />
		</div>
	</form>
	</div>
