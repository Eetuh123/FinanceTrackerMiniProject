@{
	ViewData["Title"] = "Register";
}
<div class="text-center">
	<form asp-controller="Auth" asp-action="RegisterUser" method="post">
		<div class="flex flex-col items-center w-50%">
			<input class="border-2 border-pink-900 p-2 min-w-[10%]" name="name" placeholder="Name" />
			<input class="border-2 border-pink-900 p-2 min-w-[10%]" name="password" placeholder="Secret Password" />
			<input class="border-2 border-pink-900 p-2 min-w-[10%]" type="submit"  />
		</div>
	</form>
	</div>
